    "angular-eslint": "21.0.1",
    "cypress": "^15.7.1",
    "eslint": "^9.39.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-spec-reporter": "^0.0.36",
    "prettier": "3.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.46.4"
  }
